= semantic_form_for [:admin, @lesson] do |f|
  = f.inputs name: "#{controller.action_name.capitalize} Lesson" do
    = f.input :section_id, as: :hidden, input_html: { value: @section.id }
    = f.input :name
    = f.input :file, as: :file
    = f.input :visibility, as: :select, collection: ['private', 'public']
  = f.actions do
    = f.action :submit, as: :button, button_html: { class: 'btn btn-primary' }
    = f.action :cancel, as: :link

%table.table.table-striped.table-hover
  %thead
    %tr
      %th Name
      %th
        .pull-right
  %tbody
    - @courses.each do |course|
      %tr
        %td
          = link_to course.name, admin_course_path(course)
        %td
          .pull-right
            = link_to edit_admin_course_path(course), class: 'btn btn-warning', title: 'Edit' do
              %span.glyphicon.glyphicon-edit
            = link_to admin_course_path(course), method: :delete, confirm: 'Are you sure?', class: 'btn btn-danger', title: 'Delete' do
              %span.glyphicon.glyphicon-trash

=# will_paginate @courses, renderer: BootstrapPagination::Rails
= link_to new_admin_course_path, class: 'btn btn-lg btn-block btn-primary' do
  %span.glyphicon.glyphicon-plus-sign
  New Course
